<% layout("/Layouts/boilerPlate")%>
    <div class="row">
        <div class="cols-8 offset-2">

            <h2>Listing Detailes</h2>
            <div class="card offset-1 col-6 mt-4">
                <img src="<%=listing.image%>" class="card-img-top" alt="listing img">
                <div class="cart-body">
                    <p class="card-text">
                        <b>
                            <%=listing.title%>
                        </b><br>
                        <%= listing.description %>
                        <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> /Night
                        <br>
                        <%= listing.country %>
                        <br>
                        <%= listing.location %>

                    </p>
                </div>
            </div>
            
            <br>
            <a href="/listings/<%=listing._id %>/edit" class="btn btn-dark">Edit Listing</a>
            <br>
            <form action="/listings/<%= listing._id%>?_method=Delete" method="post">
                <button class="btn btn-dark add-btn mt-4">Delete</button>
            </form>
        </div>
    </div>