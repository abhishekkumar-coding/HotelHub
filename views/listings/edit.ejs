<% layout("/Layouts/boilerPlate")%>
    <div class="row">
        <div class="col-8 offset-2">
            <h2>Edit Listing</h2>
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT">
                <div class="mb-4">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" name="listing[title]" class="form-control" value="<%= listing.title%>">
                </div>
                <div class="mb-4"><label for="description" class="form-lable">Description</label>
                    <textarea type="text" name="listing[description]"
                        class="form-control"><%= listing.description %></textarea>
                </div>
                <div class="mb-4"><label for="image" class="form-lable">Image</label>
                    <input type="text" name="listing[image]" class="form-control" value="<%= listing.image %>">
                </div>
                <div class="row">
                <div class="mb-4 col-md-3 offset-1"><label for="price" class="form-lable">Price</label>
                    <input type="number" name="listing[price]" class="form-control" value="<%= listing.price%>">
                </div>
                <div class="mb-4 col-md-4"><label for="country" class="form-lable">Country</label>
                    <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>">
                </div>
            </div>
                <div class="mb-4"><label for="location" class="form-lable">Location</label>
                    <input type="text" name="listing[location]" class="form-control" value="<%= listing.location %>">
                </div>
                <button class="add-btn btn btn-dark mb-4">Edit</button>
            </form>
        </div>
    </div>